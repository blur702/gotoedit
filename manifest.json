{
  "manifest_version": 3,
  "name": "GoToEdit",
  "version": "1.0",
  "description": "A browser extension to quickly jump to the edit page of a website.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://member-info.house.gov/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://member-info.house.gov/*"],
      "js": ["content.js"]
    }
  ]
}